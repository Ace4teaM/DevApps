<UserControl x:Class="DevApps.GUI.Tag"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DevApps.GUI"
             mc:Ignorable="d" 
             d:DesignHeight="20" d:DesignWidth="60">
    <UserControl.Template>
        <ControlTemplate TargetType="UserControl">
            <Border BorderBrush="#FF000000" Background="#FF00EE00" BorderThickness="1" CornerRadius="4">
                <TextBlock FontFamily="Verdana" Margin="6,0,6,0" FontSize="8pt" HorizontalAlignment="Center" VerticalAlignment="Center"><ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/></TextBlock>
            </Border>
        </ControlTemplate>
    </UserControl.Template>
</UserControl>
